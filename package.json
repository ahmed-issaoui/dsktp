{
  "name": "superlazy",
  "version": "0.9.4",
  "productName": "Superlazy",
  "private": true,
  "main": "./public/electron.js",
  "homepage": "./",
  "author": {
    "email": "support@superlazyapp.atlassian.net",
    "name": "Superlazy",
    "url": "https://www.superlazy.co"
  },
  "description": "Apply to thousands of jobs in one click",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "auto-launch": "^5.0.6",
    "caniuse-lite": "^1.0.30001487",
    "concurrently": "^7.5.0",
    "cron": "^2.3.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "firebase": "^9.14.0",
    "puppeteer": "^19.2.2",
    "puppeteer-extra": "^3.3.4",
    "puppeteer-extra-plugin-stealth": "^2.11.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-firebase-hooks": "^5.1.1",
    "react-router-dom": "^6.4.3",
    "react-scripts": "5.0.1",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "start:react": "cross-env BROWSER=none react-scripts start",
    "start:electron": "electron .",
    "build:react-only": "react-scripts build",
    "build:electron-only": "electron-builder",
    "build:full": "react-scripts build && electron-builder --mac --win --linux",
    "build:publish": "react-scripts build && electron-builder --publish always"
  },
  "build": {
    "appId": "com.superlazy.app",
    "productName": "Superlazy",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "copyright": "Copyright Â© 2023 Superlazy",
    "directories": {
      "output": "electron-build",
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "deb"
    },
    "publish": {
      "provider": "github",
      "owner": "Highscale-Tech",
      "repo": "desktop"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "electron": "^21.2.2",
    "electron-builder": "^23.6.0"
  }
}
